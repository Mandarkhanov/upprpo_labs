<!DOCTYPE module PUBLIC "-//Checkstyle//DTD Checkstyle Configuration 1.3//EN"
        "https://checkstyle.org/dtds/configuration_1_3.dtd">

<!--
    Checkstyle configuration that checks the Google Java Style.

    Checkstyle is very configurable. This file is intended as an
    example of a good set of rules for a Java project.

    The rules are inspired by Google's Java Style Guide:
    https://google.github.io/styleguide/javaguide.html

    This configuration is suitable for a simple Java project.
-->
<module name="Checker">
    <!--
        If you configure the following properties:
        - severity: specifies the severity of the Checkstyle messages.
        - fileExtensions: specifies the file extensions to check.
    -->
    <property name="severity" value="warning"/>
    <property name="fileExtensions" value="java, xml, properties, yml, yaml"/>

    <!-- Checks that each Java package has a Javadoc comment. -->
    <!-- See https://checkstyle.sourceforge.io/config_javadoc.html#JavadocPackage -->
    <module name="JavadocPackage"/>

    <!-- Checks that all Javadoc comments comply with the Javadoc style. -->
    <!-- See https://checkstyle.sourceforge.io/config_javadoc.html#JavadocType -->
    <module name="JavadocType">
        <property name="scope" value="package"/>
        <property name="allowMissingSrcRoots" value="true"/>
    </module>

    <!-- Checks that all Javadoc tags comply with the Javadoc style. -->
    <!-- See https://checkstyle.sourceforge.io/config_javadoc.html#JavadocMethod -->
    <module name="JavadocMethod">
        <property name="scope" value="public"/>
        <property name="allowMissingParamTag" value="true"/>
        <property name="allowMissingReturnTag" value="true"/>
        <property name="allowMissingThrowsTag" value="true"/>
        <property name="allowMissingJavadoc" value="true"/>
    </module>

    <!-- Checks that a Java source file ends with a new line. -->
    <!-- See https://checkstyle.sourceforge.io/config_misc.html#NewlineAtEndOfFile -->
    <module name="NewlineAtEndOfFile"/>

    <!-- Checks that the last line of a file is not empty. -->
    <!-- See https://checkstyle.sourceforge.io/config_misc.html#NoWhitespaceAfter -->
    <module name="NoWhitespaceAfter">
        <property name="tokens" value="DOT, METHOD_REF"/>
    </module>

    <!-- Checks that the first character of a file is not whitespace. -->
    <!-- See https://checkstyle.sourceforge.io/config_misc.html#NoWhitespaceBefore -->
    <module name="NoWhitespaceBefore">
        <property name="tokens" value="COMMA, SEMI, POST_INC, POST_DEC, DOT, METHOD_REF"/>
    </module>

    <!-- Checks that there is a whitespace character before certain tokens. -->
    <!-- See https://checkstyle.sourceforge.io/config_ws.html#WhitespaceAfter -->
    <module name="WhitespaceAfter">
        <property name="tokens" value="COMMA, SEMI, TYPE_EXTENSION_AND, RBRACK"/>
    </module>

    <!-- Checks for redundant parentheses. -->
    <!-- See https://checkstyle.sourceforge.io/config_misc.html#ParenPad -->
    <module name="ParenPad"/>

    <!-- Checks the style of brackets. -->
    <!-- See https://checkstyle.sourceforge.io/config_blocks.html#LeftCurly -->
    <module name="LeftCurly"/>

    <!-- Checks the style of right curly braces. -->
    <!-- See https://checkstyle.sourceforge.io/config_blocks.html#RightCurly -->
    <module name="RightCurly">
        <property name="id" value="RightCurlyStandalone"/>
        <property name="tokens" value="CLASS_DEF, METHOD_DEF, CTOR_DEF, LITERAL_FOR, LITERAL_WHILE, LITERAL_DO, LITERAL_IF, LITERAL_ELSE, LITERAL_TRY, LITERAL_CATCH, LITERAL_FINALLY, LITERAL_SWITCH, LITERAL_SYNCHRONIZED, ARRAY_INIT"/>
    </module>
    <module name="RightCurly">
        <property name="id" value="RightCurlyAlone"/>
        <property name="tokens" value="CLASS_DEF, METHOD_DEF, CTOR_DEF, LITERAL_FOR, LITERAL_WHILE, LITERAL_DO, LITERAL_IF, LITERAL_ELSE, LITERAL_TRY, LITERAL_CATCH, LITERAL_FINALLY, LITERAL_SWITCH, LITERAL_SYNCHRONIZED, ARRAY_INIT"/>
        <property name="option" value="alone"/>
    </module>

    <!-- Checks that control statements have curly braces. -->
    <!-- See https://checkstyle.sourceforge.io/config_blocks.html#NeedBraces -->
    <module name="NeedBraces"/>

    <!-- Checks the layout of the import statements. -->
    <!-- See https://checkstyle.sourceforge.io/config_imports.html#ImportOrder -->
    <module name="ImportOrder">
        <property name="groups" value="java,javax,org,com"/>
        <property name="ordered" value="true"/>
        <property name="separated" value="true"/>
        <property name="option" value="top"/>
        <property name="sortStaticImportsAlphabetically" value="true"/>
    </module>

    <!-- Checks for redundant import statements. -->
    <!-- See https://checkstyle.sourceforge.io/config_imports.html#RedundantImport -->
    <module name="RedundantImport"/>

    <!-- Checks for unused import statements. -->
    <!-- See https://checkstyle.sourceforge.io/config_imports.html#UnusedImports -->
    <module name="UnusedImports"/>

    <!-- Checks that each variable definition is on its own line. -->
    <!-- See https://checkstyle.sourceforge.io/config_misc.html#MultipleVariableDeclarations -->
    <module name="MultipleVariableDeclarations"/>

    <!-- Checks that there are no magic numbers. -->
    <!-- See https://checkstyle.sourceforge.io/config_coding.html#MagicNumber -->
    <module name="MagicNumber"/>

    <!-- Checks the length of lines. -->
    <!-- See https://checkstyle.sourceforge.io/config_sizes.html#LineLength -->
    <module name="LineLength">
        <property name="max" value="120"/>
        <property name="ignorePattern" value="^package.*|^import.*|a href|href|http://|https://|ftp://"/>
    </module>

    <!-- Checks that local variables are declared at the beginning of their scope. -->
    <!-- See https://checkstyle.sourceforge.io/config_misc.html#NoFinalizer -->
    <module name="NoFinalizer"/>

    <!-- Checks that String literals are not compared using == or !=. -->
    <!-- See https://checkstyle.sourceforge.io/config_coding.html#StringLiteralEquality -->
    <module name="StringLiteralEquality"/>

    <!-- Checks that variables are named according to a pattern. -->
    <!-- See https://checkstyle.sourceforge.io/config_naming.html -->
    <module name="LocalVariableName"/>
    <module name="LocalFinalVariableName"/>
    <module name="MemberName"/>
    <module name="MethodName"/>
    <module name="PackageName"/>
    <module name="ParameterName"/>
    <module name="StaticVariableName"/>
    <module name="TypeName"/>

    <!-- Checks for empty blocks. -->
    <!-- See https://checkstyle.sourceforge.io/config_blocks.html#EmptyBlock -->
    <module name="EmptyBlock"/>

    <!-- Checks that array initialization is not empty. -->
    <!-- See https://checkstyle.sourceforge.io/config_blocks.html#EmptyBlock -->
    <module name="EmptyCatchBlock"/>

    <!-- Checks for overridden methods. -->
    <!-- See https://checkstyle.sourceforge.io/config_annotation.html#MissingOverride -->
    <module name="MissingOverride"/>

    <!-- Checks for spaces before parentheses in a method or constructor call. -->
    <!-- See https://checkstyle.sourceforge.io/config_ws.html#MethodParamPad -->
    <module name="MethodParamPad"/>

    <!-- Checks for spaces around tokens. -->
    <!-- See https://checkstyle.sourceforge.io/config_ws.html#NoWhitespaceBefore -->
    <module name="NoWhitespaceBefore">
        <property name="tokens" value="ARRAY_INIT, DOT, GENERIC_START, TYPE_EXTENSION_AND"/>
    </module>

    <!-- Checks for spaces after tokens. -->
    <!-- See https://checkstyle.sourceforge.io/config_ws.html#WhitespaceAfter -->
    <module name="WhitespaceAfter">
        <property name="tokens" value="COMMA, SEMI"/>
    </module>

    <!-- Checks that there is a blank line after the package declaration. -->
    <!-- See https://checkstyle.sourceforge.io/config_misc.html#EmptyLineSeparator -->
    <module name="EmptyLineSeparator">
        <property name="tokens" value="PACKAGE_DEF, CLASS_DEF, INTERFACE_DEF, ENUM_DEF, STATIC_INIT, INSTANCE_INIT, METHOD_DEF, CTOR_DEF, VARIABLE_DEF"/>
        <property name="allowMultipleEmptyLines" value="false"/>
    </module>

    <!-- Checks that all C-style array declarations (e.g., String args[]) are converted to Java-style declarations (e.g., String[] args). -->
    <!-- See https://checkstyle.sourceforge.io/config_misc.html#ArrayTypeStyle -->
    <module name="ArrayTypeStyle"/>

    <!-- Checks that comments are on separate lines. -->
    <!-- See https://checkstyle.sourceforge.io/config_whitespace.html#WhitespaceAround -->
    <module name="WhitespaceAround">
        <property name="tokens" value="ASSIGN, BAND, BAND_ASSIGN, BOR, BOR_ASSIGN, BSR, BSR_ASSIGN, BXOR, BXOR_ASSIGN, COLON, DIV, DIV_ASSIGN, EQUAL, GE, GT, LAND, LCURLY, LE, LITERAL_ASSERT, LITERAL_CATCH, LITERAL_DO, LITERAL_ELSE, LITERAL_FINALLY, LITERAL_FOR, LITERAL_IF, LITERAL_RETURN, LITERAL_SYNCHRONIZED, LITERAL_TRY, LITERAL_WHILE, LOR, LT, MINUS, MINUS_ASSIGN, MOD, MOD_ASSIGN, NOT_EQUAL, PLUS, PLUS_ASSIGN, QUESTION, RCURLY, SL, SL_ASSIGN, SR, SR_ASSIGN, STAR, STAR_ASSIGN, TYPE_EXTENSION_AND, WILDCARD_TYPE"/>
    </module>
</module>